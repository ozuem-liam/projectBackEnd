model Order {
    id           String      @id @default(cuid())
    cart_id      Cart[]
    total_amount Int
    created_at   DateTime    @default(now())
    status       Status_type @default(pending)

    @@map(name: "order")
}

enum Status_type {
    pending
    in_progress
    delivered
}

// add to cart
model Order_details {
    id              String @id @default(cuid())
    product_details String
    color           String
    sub_total       String
    order_id        String
    customer_id     String
    product_id      String

    @@map(name: "order_items")
}

model Product {
    id         String     @id @default(cuid())
    name       String
    desc       String
    price      String
    is_delete  Boolean    @default(false)
    created_at DateTime   @default(now())
    cart       Cart[]
    categories Category[]

    @@map(name: "product")
}

model Category {
    id            String    @id @default(cuid())
    category_name String
    sku           String
    products      Product[]

    @@map(name: "category")
}

model Cart {
    id         String  @id @default(cuid())
    products   Product @relation(fields: [product_id], references: [id])
    product_id String
    order      Order   @relation(fields: [order_id], references: [id])
    order_id   String

    @@map("cart")
}
