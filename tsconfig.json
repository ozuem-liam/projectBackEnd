{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": "./",                                    
    "rootDir": "./src",                                  
    "lib": ["esnext"],                                        
    "module": "commonjs",
    "resolveJsonModule": true,                                
    "noImplicitAny": false,                                
    "moduleResolution": "node",                                           
    "sourceMap": true,                                          
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                               
  }
}
